{
  "manifest_version": 3,
  "name": "TKS Fullscreen",
  "description": "A Chrome extension to watch your paid for surfline streams without interuption on full screen.",
  "version": "2.0",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.surfline.com/*"
  ],
  "action": {
    "default_title": "TKS",
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.surfline.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://www.surfline.com/*"
      ]
    }
  ]
}